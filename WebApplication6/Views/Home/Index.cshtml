                                                <option value="2">Профнастил Н20-1060-0.6</option>
                                                <option value="3">Профнастил Н20-1060-0.7</option>
                                                <option value="4">Профнастил С21-1000-0.5</option>
                                                <option value="5">Профнастил С21-1000-0.6</option>
                                                <option value="6">Профнастил С21-1000-0.7</option>
                                                <option value="7">Профнастил НС35-1000-0.5</option>
                                                <option value="8">Профнастил НС35-1000-0.6</option>
                                                <option value="9">Профнастил НС35-1000-0.7</option>
                                                <option value="10">Профнастил С44-1000-0.5</option>
